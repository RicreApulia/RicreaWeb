    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ var "Name" }} - Home">
    <meta property="og:description" content="{{ var "About" }}">
    <!-- <meta property="og:url" content="{ var "Domain" }"> -->
    <meta property="og:site_name" content="{{ var "Name" }}">
    <meta property="og:updated_time" content="{{ var "Time" }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ var "Name" }} - Home">
    <meta name="twitter:description" content="{{ var "About" }}">
	</head>
